<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.FinalCatActivity">

    <TextView
        android:id="@+id/CatTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nature"
        android:gravity="center"
        android:fontFamily="@font/ragular"
        android:textSize="28sp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:padding="7dp"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/cat_title"

        />

    <EditText
        android:id="@+id/etPastelink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:hint="Paste link here"
        android:background="@drawable/edit_txt_shape"
        android:layout_margin="10dp"
        />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Add to list"
        android:fontFamily="@font/bold"
        android:layout_margin="10dp"
        android:backgroundTint="#9360f9"
        />

    <TextView
        android:id="@+id/CatSubTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nature Wallpaper"
        android:textSize="22sp"
        android:fontFamily="@font/ragular"
        android:layout_margin="10dp"
        android:textColor="@color/wallpaperPrimary"

        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revFinal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

</LinearLayout>